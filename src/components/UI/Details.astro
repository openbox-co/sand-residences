---
import Hotel from "@/assets/svg/Hotel.svg";
import Lock from "@/assets/svg/Lock.svg";
import Umbrella from "@/assets/svg/Umbrella.svg";
import ContentMotion from "../react/ContentMotion";
import ItemDetails from "./ItemDetails.astro";
const { t } = Astro.props;
---
<ContentMotion client:visible sx='mt-20 md:mt-[180px] pb-[120px] rounded-br-[40px] rounded-bl-[40px] bg-white absoluteTop'>
  <section class="mx-auto w-full lg:max-w-[900px] transition-all ease-in-out flex flex-col gap-y-5 px-[30px] md:px-[45px]">
    <article class="rounded-lg">
      <header class="flex gap-x-5 h-full">
        <div>
          <h2 class="text-black">{t('location')}</h2>
          <h3 class="text-[24px] leading-none font-bold text-black">las Canas, Cap Cana</h3>
        </div>
        <div class="h-12 w-[1px] bg-grayBroker">
        </div>
        <div>
          <h2 class="text-black">{t('reserve')}</h2>
          <h3 class="text-[24px] leading-none font-bold text-black">USD 3,000</h3>
        </div>
      </header>
      <p class="text-black w-full leading-7 mt-5">
        {t('details_description')}
      </p>
    </article>
    <div class="h-[1px] w-full bg-grayBroker">
    </div>
    <article class="grid grid-cols-1 md:grid-cols-3 w-full max-w-2xl mx-auto gap-10">
      <ItemDetails 
        sx="items-center md:items-start"
        icon={Umbrella.src}
        content={t('details_item1')} 
      />
      <ItemDetails 
        sx="items-center md:items-start"
        icon={Lock.src}
        content={t('details_item2')}
      />
      <ItemDetails
        sx="items-center md:items-start min-w-[240px]" 
        icon={Hotel.src}
        content={t('details_item3')}
      />
    </article>
  </section>
</ContentMotion>